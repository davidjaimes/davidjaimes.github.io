---
import LayoutBase from "../layouts/LayoutBase.astro";
import {Content as Markdown404} from "../components/404.md";
const { id } = Astro.params;

const page = await getPage(id);

if (!page) return Astro.redirect('/404')
---
<LayoutBase>
	<section>
		<h2>404 Error</h2>
		<h1>Page Not Found</h1>
		<p>It looks like you've found a URL that does not exist. Please use the navigation above to find your way back to my main page.</p>
	</section>
</LayoutBase>

<style>
	section {@apply max-w-4xl mx-auto pt-4 laptop:pt-8 font-mono text-gray-dark dark:text-white px-4}
	h2 {@apply pb-4 text-4xl text-center}
	h1 {@apply pb-8 text-2xl text-center}
</style>