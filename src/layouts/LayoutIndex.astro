---
import Layout from "../layouts/Layout.astro";
import Jumbotron from "../components/Jumbotron.astro";
import {Content as IndexMarkdown} from "../components/Index.md";
---
<div>
	<Layout>
		<Jumbotron/>
		<div class="post-content">
			<IndexMarkdown/>
		</div>
	</Layout>
</div>

<style>
	:global(.post-content) {@apply max-w-4xl mx-auto pt-8 laptop:pt-12 font-mono text-gray-dark dark:text-white px-4}
	:global(.post-content h2) {@apply pt-8 pb-4 text-2xl }
</style>